/* pages/shop/shop.wxss */
.lunbo1 {
  width: 100%;
  height: 320rpx;
  background: black;
}

.lunbo2 {
  width: 100%;
  height: 320rpx;
}

.lunbo3 {
  width: 100%;
  height: 320rpx;
}

.other {
  clear: both;
  padding-top: 5%;
  display: flex;
}

.other view {
  flex: 1;
  text-align: center;
}

.other .border_r {
  border-right: solid 1px #bbd;
}

.other .title {
  font-size: 12px;
  color: #bbd;
}

.other .info {
  display: block;
  padding-top: 5%;
}

.con .nm {
  font-size: 14pt;
  font-weight: bold;
}

.con .des {
  line-height: 22px;
  font-size: 12pt;
  padding: 5px 0;
  color: #999;
}

.con .sub {
  color: #ff6a00;
  font-size: 12pt;
}

.con .sub text {
  font-size: 15pt;
}

.img image {
  width: 200rpx;
  height: 200rpx;
}

.item {
  display: flex;
  padding: 10px 0;
  background-color: #fff;
  /* 下边框 */
  border-bottom: 1px solid #eee;
}

.container-goods {
  background: white;
}

.single-goods {
  display: block;
  float: left;
  width: 50%;
}

image {
  width: 220rpx;
  height: 220rpx;
  display: block;
  margin: 20rpx auto;
}

.title {
  display: block;
  width: 90%;
  color: #999;
  font-size: 28rpx;
  margin: 10rpx 6rpx;
  height: 60rpx;
  line-height: 32rpx;
  overflow: hidden;
}

.summary {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.summary text {
  font-size: 28rpx;
  margin: 10rpx 20rpx;
}

.summary .price {
  color: red;
}

.summary .sale {
  color: gray;
}

.dibu {
  text-align: center;
  font-size: 36rpx;
  color: #bbd;
}

.duihuan {
  position: relative;
  top: 150rpx;
  justify-content: center;
  display: flex;
  padding: 20rpx 0;
  display: flex;
  width: 180rpx;
  height: 50rpx;
  border-top: 1rpx solid #ddd;
  box-shadow: 0 -1px 5px 0 #eee;
  background-color: #FfDC35;
}
