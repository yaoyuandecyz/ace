/* 现在用的样式 */
.scroll-list {
  width: 750rpx;
  margin-top: 30rpx;
  display: flex;
  height: 180rpx;
  margin-bottom: 30rpx;
}

.scroll-list-after {
  margin-right: 30rpx;
  position: relative;
  display: flex;
}

.content-title {
  font-size: 34rpx;
  font-family: -apple-system,
                 BlinkMacSystemFont,
                 'Segoe UI',
                 Roboto,
                 Oxygen,
                 Ubuntu,
                 Cantarell,
                 'Open Sans',
                 'Helvetica Neue',
                 sans-serif;
  flex: 1.8;
  color: black;
  margin-left: 30rpx;
}

.content-title text {
  display: -webkit-box !important;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.scroll-list-after::before {
  /* margin-top: 30rpx; */
  content: "";
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 1rpx;
  color: #272c37;
  border-top: 1px solid #272c37;
  left: 30rpx;
}

.scroll-list::after {
  content: "";
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 1rpx;
  color: #272c37;
  border-top: 1px solid #272c37;
}

.content-title p {
  flex: 1;
  color: #7c7f86;
  float: left;
  padding-top: 36rpx;
  font-size: 26rpx;
}

.content-img {
  padding-left: 30rpx;
  height: 150rpx;
  flex: 1;
  width: 100rpx;
}
